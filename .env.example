# SuperHyperion Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# TypeDB Configuration
# ============================================
TYPEDB_HOST=localhost
TYPEDB_PORT=1729
TYPEDB_DATABASE=superhyperion

# For TypeDB Cloud (free tier), use:
# TYPEDB_HOST=your-cluster.cloud.typedb.com
# TYPEDB_PORT=1729

# ============================================
# Ollama Configuration
# ============================================
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_EMBED_MODEL=nomic-embed-text

# ============================================
# Jupyter Sandbox
# ============================================
JUPYTER_HOST=localhost
JUPYTER_PORT=8888
JUPYTER_TOKEN=superhyperion
JUPYTER_KERNEL=python3

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# ============================================
# Agent Configuration
# ============================================
ENTROPY_THRESHOLD=0.4
